{{#block "imports"}}
use axum::Router;

#[path = "config.rs"]
mod config;
{{#if has_database}}
#[allow(dead_code)]
#[path = "db.rs"]
mod db;
{{/if}}
{{#if has_auth}}
#[path = "handlers/auth.rs"]
mod auth;
{{/if}}
#[path = "handlers/health.rs"]
mod health;

use config::Config;
{{/block}}

{{#block "main_body"}}
#[tokio::main]
async fn main() -> anyhow::Result<()> {
{{#block "config"}}
{{#if has_logging}}
    // Initialize tracing
    tracing_subscriber::fmt()
        .with_env_filter(
            tracing_subscriber::EnvFilter::try_from_default_env()
                .unwrap_or_else(|_| tracing_subscriber::EnvFilter::new("info")),
        )
        .init();
{{/if}}

    // Load configuration
    let config = Config::from_env()?;

{{#if has_database}}
    // Initialize database connection pool
    if let Some(ref db_url) = config.database_url {
        tracing::info!("Database URL configured: {}...", &db_url[..db_url.len().min(20)]);
        // TODO: Initialize connection pool
        // let pool = db::DbPool::connect(db_url).await?;
        // pool.run_migrations().await?;
    }
{{/if}}
{{#if has_auth}}
    if config.jwt_secret.is_some() {
        tracing::info!("JWT authentication enabled");
    }
{{/if}}
{{/block}}

{{#block "middleware"}}
{{/block}}
    // Build our application with routes
    let app = Router::new()
{{#block "routes"}}
        .merge(health::router())
        {{#if has_auth}}
        .merge(auth::router())
        {{/if}}
{{/block}};

    let bind_address = config.bind_address();
    let listener = tokio::net::TcpListener::bind(&bind_address).await?;

    tracing::info!("Starting server on {}", bind_address);

    axum::serve(listener, app).await?;

    Ok(())
}
{{/block}}
