{{#if has_biz_error}}
# Business Error Definitions for {{project_name}}
#
# This file is read at compile time by build.rs and auto-generates
# an ErrorCode enum in $OUT_DIR/error_codes.rs with methods:
#   - code()              -> i32
#   - message()           -> &'static str (default language)
#   - message_lang(lang)  -> &'static str (specified language)
#   - http_status_code()  -> u16
#
# Usage in handlers:
#   use crate::error_codes::ErrorCode;
#
#   let err = ErrorCode::UserNotFound;
#   println!("{}", err.message());           // "User not found"
#   println!("{}", err.message_lang("zh"));  // "用户不存在"
#   println!("{}", err.http_status_code());  // 404

default_language: en

errors:
  # User-related errors (4000-4099)
  USER_NOT_FOUND:
    code: 4001
    message:
      en: "User not found"
      zh: "用户不存在"
    http_status: 404

  USER_ALREADY_EXISTS:
    code: 4002
    message:
      en: "User already exists"
      zh: "用户已存在"
    http_status: 409

  INVALID_CREDENTIALS:
    code: 4003
    message:
      en: "Invalid username or password"
      zh: "用户名或密码错误"
    http_status: 401

  # Authentication/Authorization errors (4100-4199)
  TOKEN_EXPIRED:
    code: 4101
    message:
      en: "Authentication token has expired"
      zh: "认证令牌已过期"
    http_status: 401

  TOKEN_INVALID:
    code: 4102
    message:
      en: "Invalid authentication token"
      zh: "无效的认证令牌"
    http_status: 401

  PERMISSION_DENIED:
    code: 4103
    message:
      en: "Permission denied"
      zh: "权限不足"
    http_status: 403

  # Validation errors (4200-4299)
  VALIDATION_ERROR:
    code: 4201
    message:
      en: "Validation failed"
      zh: "数据验证失败"
    http_status: 400

  INVALID_EMAIL:
    code: 4202
    message:
      en: "Invalid email address"
      zh: "邮箱地址无效"
    http_status: 400

  WEAK_PASSWORD:
    code: 4203
    message:
      en: "Password is too weak"
      zh: "密码强度不足"
    http_status: 400

  # Database errors (4300-4399)
  DATABASE_ERROR:
    code: 4301
    message:
      en: "Database operation failed"
      zh: "数据库操作失败"
    http_status: 500

  RECORD_NOT_FOUND:
    code: 4302
    message:
      en: "Record not found"
      zh: "记录不存在"
    http_status: 404

  # General errors (5000-5099)
  INTERNAL_ERROR:
    code: 5001
    message:
      en: "Internal server error"
      zh: "服务器内部错误"
    http_status: 500

  SERVICE_UNAVAILABLE:
    code: 5002
    message:
      en: "Service temporarily unavailable"
      zh: "服务暂时不可用"
    http_status: 503
{{/if}}
