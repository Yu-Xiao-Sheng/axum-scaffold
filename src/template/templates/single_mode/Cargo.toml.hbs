[package]
name = "{{project_name}}"
version = "0.1.0"
edition = "2024"
description = "{{description}}"
authors = ["{{author_name}}"]

[dependencies]
axum = "0.7"
tokio = { version = "1.35", features = ["full"] }
tracing = "0.1"
tracing-subscriber = { version = "0.3", features = ["env-filter"] }
serde = { version = "1", features = ["derive"] }
serde_json = "1"
anyhow = "1"

{{#if has_database}}
sqlx = { version = "0.7", features = ["runtime-tokio-rustls", "postgres", "sqlite"] }
{{/if}}

{{#if has_auth}}
jsonwebtoken = "9"
bcrypt = "0.15"
{{/if}}

{{#if has_biz_error}}
biz-error = { version = "0.1", features = ["codegen"] }
{{/if}}

[dev-dependencies]
tokio-test = "0.4"

{{#if has_biz_error}}
[build-dependencies]
biz-error = { version = "0.1", features = ["codegen"] }
{{/if}}
